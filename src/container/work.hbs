{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>



	{{#with main}}

	<main>
		<section>

			{{> title data="Work history" big=true}}


			<div>
				<ul>
					{{#each works}}
					<li>
						<div>{{position}}</div>

						<br>

						<div>
							{{duration.from}} -
							{{#if duration.to}}
							{{duration.to}}
							{{else }}
							(Досі працюємо)
							{{/if}}
						</div>

						<br>
						{{#if company.url}}
						<div>{{> link text=company.name href=company.url blank=true noLine=true}}</div>
						{{else}}
						<b>{{company.name}}</b>
						{{/if}}
						<br>
						<br>
						<div>
							<strong>Projects ({{projectAmount}})</strong>
						</div>
						<br>

						<ul>
							{{#each projects}}

							<li>
								<div>
									{{> link text=name href=url blank=true noLine=true}}
								</div>
								<br>
								<div>
									<p>{{about}}</p>
								</div>
								<br>
								<div>
									<em>
										Project stacks ({{stackAmount}})
									</em>
								</div>

								<br>
								<div>
									{{#each stacks}}
									{{name}},
									{{/each}}
								</div>
								<br>
								<div>
									<em>
										Project awards
									</em>
								</div>
								<br>
								<div>
									{{#each awards}}
									{{name}}
									<br>
									{{/each}}
								</div>
								<div>

								</div>

							</li>
							{{/each}}
						</ul>
					</li>

					{{/each}}
				</ul>
			</div>
		</section>

	</main>
	{{/with}}


</div>

