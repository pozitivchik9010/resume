<main>
    <div class="">
        <section class="card col-12">
            <div class="card-header row g-2">
                {{#with navigation}}
                {{#each navigation}}
                <div class="col-2">
                    <a href="{{href}}" class="btn btn-link" target="_blank">{{text}}</a>
                </div>
                {{/each}}
                {{#with button}}
                <div class="col-2">
                    <a href="{{href}}" class="btn btn-primary" target="_blank">{{text}}</a>
                </div>

                {{/with}}
                {{/with}}
            </div>
        </section>
    </div>
    {{#with header}}
    <section>
        <h1>{{title}}</h1>
        <p>{{description}}</p>

        {{#with button}}
        <div class="">
            <a href="{{link}}" class="btn btn-primary" target="_blank">{{text}}</a>
        </div>
        {{/with}}

    </section>
    {{/with}}

    <hr>

    <section class="col-12">
        <div class="row gy-2">
            {{#with city}}
            {{#each cards}}
            <div class="col-5">
                <div class="card h-100">
                    <div class="card-body text-center d-flex flex-column">

                        <img class="card-img-top" src="{{picture/src}}" alt="{{picture/alt}}">

                        <h6 class="card-title">{{title}}</h6>
                        <p class="flex-grow-1">{{description}}</p>
                        <div class="d-flex justify-content-center">
                            <a href="{{button/href}}" target="_blank" class="btn btn-primary">{{button/text}}</a>
                        </div>
                    </div>
                </div>
            </div>

            {{/each}}
            {{/with}}
        </div>
    </section>
    <hr>

    <section class="col-12">
        {{#with winner}}
        <h2>{{title}}</h2>
        <table class=" table ">
            {{#with table/head}}
            <thead>
                <tr>
                    <th>
                        {{0}}
                    </th>
                    <th>
                        {{1}}
                    </th>
                    <th>
                        {{2}}
                    </th>
                    <th>
                        {{3}}
                    </th>
                </tr>
            </thead>
            {{/with}}
            {{#each table/user}}
            <tbody>
                <tr>
                    <th>{{place}}</th>
                    <td>{{name}}</td>
                    <td>{{surname}}</td>
                    <td>{{nickname}}</td>
                </tr>
            </tbody>
            {{/each}}
        </table>
        {{/with}}
    </section>

    <hr>

    <section class="col-12">
        {{#with gallery}}
        <h2>{{title}}</h2>



        <div class="row g-2">
            {{#each cards}}
            <div class=" col-4">
                <div class="card h-100">
                    <div class="card-header ">{{name}}</div>
                    {{#with items}}

                    <ul class="list-group ">
                        <li class="list-group-item">{{0}}</li>
                        <li class="list-group-item">{{1}}</li>
                        <li class="list-group-item">{{2}}</li>
                    </ul>

                    {{/with}}
                </div>
            </div>

            {{/each}}

            {{/with}}
    </section>

    <hr>

    <section class="col-12">
        <div class="row g-2">

            {{#with relaxion}}
            <div class="display-3">{{title}}</div>

            {{#each cards}}
            <div class=" col-5">
                <div class="card text-bg-secondary h-100">
                    <div class="card-header ">{{header}}</div>
                    <div class="card-body ">
                        <h6 class="card-title">{{title}}</h6>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}

            {{/with}}

    </section>
    <hr>
    <section class="col-12">
        <div class="row g-2">
            {{#each rest/cards}}

            <div class=" col-6">
                <div class="card ">
                    <div class="card-header text-center">{{header}}</div>
                    <div class="card-body text-center">
                        <h6 class="card-title">{{title}}</h6>
                        <p>{{description}}</p>
                        <button class="btn btn-primary ">{{button}}</button>
                    </div>
                    <div class="card-footer text-center">{{footer}}</div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>

    <hr>
    <section class="col-12">
        <div class="row g-2">

            {{#with proposition}}
            <div class="display-2">{{title}}</div>

            {{#each card}}
            <div class=" col-5">
                <div class="card text-bg-warning h-100 text-light">
                    <div class="card-header ">{{header}}</div>
                    <div class="card-body ">
                        <h6 class="card-title">{{title}}</h6>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}

            {{/with}}
        </div>
    </section>

    <hr>

    <section class="col-12">
        <div class="row gx-3">

            {{#with footer}}
            <h5>{{title}}</h5>
            <div class="row gx-3">

                <div class="col">
                    {{#each navigation}}
                    <div class="">
                        <a href="{{href}}" class="btn btn-link">{{text}}</a>
                    </div>
                </div>
                {{/each}}

                <div class="col">
                    {{#each socialMedia}}
                    <div class="">
                        <div class="btn btn-link">{{name}}</div>
                    </div>

                </div>
                {{/each}}

            </div> {{/with}}
        </div>
    </section>

    <hr>

    <section class="col-12">
        <div class="row gx-3">
            <div class="">
                <div class="row">

                    {{#with footer}}
                    <h5>{{title}}</h5>
                    <div class="col">
                        {{#each navigation}}
                        <div class="3 mb-2">
                            <a href="{{href}}" class="btn btn-link ">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>

                    <div class="col">
                        {{#each socialMedia}}
                        <div class="3 mb-2">
                            <a href="{{link}}" class="btn btn-outline-dark">{{name}}</a>
                        </div>
                        {{/each}}
                    </div>

                    <div class="col">
                        {{#each partners}}
                        <div class="3 mb-2">
                            <a href="{{link}}" class="btn btn-outline-info">{{name}}</a>
                        </div>
                        {{/each}}

                    </div>
                </div>{{/with}}
            </div>
        </div>
    </section>
