<div class="col-4">
    <p>{{number}}</p>
    <p>{{status}}</p>
</div>
<div class="col-2 ">
    <a>{{amount/title}}</a>
    <h3>{{amount/value}} </h3>
</div>

<div class="col-4">{{#each images}}
    <img width="80px" src="{{this}}">
    {{/each}}
</div>
<div class="col-2 mt-4">
    {{#with button}}
    <a href="{{link}}" class="btn btn-{{#if isPrimary}}primary{{/if}}">
        {{text}}
    </a>
    {{/with}}
</div>
<div class="">
    <hr>
</div>